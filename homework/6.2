package six;
import java.math.*;
import java.util.*;
public class Branches 
{
	static int high;
	static String [] tree;
	static int items;
    int row = 1;
    public static void main(String[] args)
    {
    	int rowSize = 32;
		int numRows = (int)(Math.log(rowSize)/Math.log(2)) + 1;
		tree = new String[numRows];
		for(int i = 0; i < tree.length; i++) tree[i] = "";
		makeBranches(0, rowSize-1, 0);
		display();
    	
    }
    public static void makeBranches(int left,int right,int row)
    {
    	 int mid = (left+right)/2;
    	if(left==right)
    	return;
    	else
    	{	  
    	   for(int i=left;i<right;i++)
    	   {
    		   if(i==mid)
    		   tree[row] += " X";
    		   else
    		   tree[row] += "-";
    	   }
    	}
    	makeBranches(left,mid,row+1);
    	makeBranches(mid+1,right,row+1);
    }
    public static void display()
    {
    	for(int i=0;i<tree.length;i++)
    		System.out.println(tree[i]);
    }
	

}
